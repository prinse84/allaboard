<%= form_for (@vendor) do |f| %>
	<div class="form-group">
		<%= render 'error_messages' %>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :name, 'Vendor Name'%>
					<%= f.text_field :name, :placeholder=>"Vendor Name", class:"form-control" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :address, 'Address' %>
					<%= f.text_area :address, :rows=>5, :class=>'input-block-level form-control' %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :phone, 'Phone number'%>
					<%= f.text_field :phone, class:"form-control" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :email, 'Email Address'%>
					<%= f.text_field :email, class:"form-control" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :contact, 'Contact Person'%>
					<%= f.text_field :contact, class:"form-control" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :website_url, 'Website URL'%>
					<%= f.text_field :website_url, :placeholder=>"http://example.com", class:"form-control" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
						<div class="checkbox"><label><%= f.check_box :indoor %><%= f.label :indoor, 'This vendor does indoor events' %></label></div>
						<div class="checkbox"><label><%= f.check_box :outdoor %><%= f.label :outdoor, 'This vendor does outdoor events' %> </label></div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :capacity, 'What is the vendor\'s capcity?'%>
					<%= f.text_field :capacity, class:"form-control" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :cost, 'How much did it cost your board to hire this vendor?'%>
					<%= f.text_field :cost, class:"form-control" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
						<div class="checkbox"><label><%= f.check_box :food %><%= f.label :indoor, 'This vendor allows food at their venue' %></label></div>
						<div class="checkbox"><label><%= f.check_box :catering %><%= f.label :outdoor, 'This vendor allows outside catering' %> </label></div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :board_id, 'Select your board'%>
					<%= f.collection_select :board_id, Board.all, :id, :name, {prompt: true}, {class: "form-control"} %>
				</div>
			</div>
		</div>

		<div class="clearfix"></div>

		<div class="row">
			<div class="col-md-6">
				<%= f.submit "Save", class: "btn btn-primary" %>&nbsp;<%= link_to 'Cancel', vendors_path %>
			</div>
		</div>
	</div>
<% end %>
