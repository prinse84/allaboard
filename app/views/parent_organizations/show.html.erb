<% provide(:title, @parent_organization.name + " on") %>

<div class="row">
	<div class="span7 mycontent-left">	
		<div class="content-header">
			<span class="lead"><strong><%= @parent_organization.name %></strong></span>
			<% if site_admin_logged_in? %>
				<p><small><%= link_to 'Edit Organization Details',edit_parent_organization_path(@parent_organization) %> | 		
					<%= link_to 'Delete this Organization', parent_organization_path(@parent_organization), method: :delete, data: { confirm: "Do you want to delete this Organization and all information that belongs to it?" } %></small>
				</p>
			<% end %>
		</div>
		<div class="row">
			<div class="span7">
				<p class="section-title">Organization Description</p>
				<p>&nbsp;</p>
			</div>
		</div>

		<div class="row">
			<div class="span7 clear-separator">
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="row">
			<p><span class='lead'>Organization Details</span>
			</p>
			
			<span><strong>EIN:</strong></span>
				<p><small><%= @parent_organization.formatted_ein %></small></p>
		</div>
	</div>
</div>
