<div class="center hero-unit">
  <h1>Welcome to the TBD</h1>

  <h2>
    Get Involved. See what goes on around Chicago's Associate Boards.
  </h2>

  <%= link_to "Write a Review!", new_review_path, class: "btn btn-large btn-primary" %>
</div>
<div class="span8">
	<h3>Previous Reviews</h3>
	<% @boards.each do |board| %>
	<strong><%= link_to board.name, board_reviews_path(board) %></strong> <small>( <%= pluralize(board.reviews.size, 'review') %> )</small>
	<div class="star" data-score='<%= board.average_rating %>'></div>	
			<div>&nbsp;</div>	
	<blockquote>
			<p><%= board.reviews.last.title %></p>
			<small><%= board.reviews.last.reviewer_type.name%>. Submitted <%= time_ago_in_words(board.reviews.last.created_at) %> ago.</small>
			<h5>Pros:</h5>
			<p style="font-size:14px"><%= board.reviews.last.pros.truncate(80, separator:' ') %></p>
			<h5>Cons:</h5>	
			<p style="font-size:14px"><%= board.reviews.last.cons.truncate(80, separator:' ') %></p>
	</blockquote>
<% end %>
</div>
<div class="span2">
	<%= @reviews.size %> submitted so far. 
	
</div>

<script>
$('.star').raty({ score: function() {
    						return $(this).attr('data-score');
  							},
	      		halfScore: true,
				readOnly: true,
				hints: ['Very Dissatisfied', 'Dissatisfied', 'Neutral "OK"', 'Satisfied', 'Very Satisfied'],
				path: '/assets'
				});
</script>