<div class="page-header">
	<h1>Contact Us</h1>
</div>

<div class="row">
	<div class="span8">
		<p>Use this form to contact a member of our steering committee.</p>
	</div>
</div>

<div class="row">
	<div class="span8">
		<%= form_for @contact, :url => contact_send_path do |f| %>
			<div class="form-group">
				
				<% if @contact.errors.any? %>
				  <div id="error_explanation">
				    <div class="alert alert-error">
				      The form contains <%= pluralize(@contact.errors.count, "error") %>.
				    </div>
				    <ul>
				    <% @contact.errors.full_messages.each do |msg| %>
				      <li>* <%= msg %></li>
				    <% end %>
				    </ul>
				  </div>
				<% end %>
				
				
				<div class="row">
					<div class="span6"><%= f.label :name, 'Your Name'%></div>
				</div>
	
				<div class="row">		
					<div class="span6"><%= f.text_field :name, :placeholder=>"John Smith" %></div>
				</div>
				
				<div class="row">
					<div class="span6"><%= f.label :Email, 'Your email address'%></div>
				</div>

				<div class="row">		
					<div class="span6"><%= f.text_field :email, :placeholder=>"you@example.com" %></div>
				</div>	

				<div class="row">
					<div class="span6"><%= f.label :message, 'Message'%></div>
				</div>							
			
				<div class="row">
					<div class="span6"><%= f.text_area :message, :placeholder=>"Your message to us", :rows=>4, :class=>'input-block-level', :autofocus=> true %>
					</div>
				</div>
				
		        <%= f.hidden_field :nickname, :hint => 'Leave this field blank!' %>
		
			<div class="row">	
				<div class="span6"><%= f.submit "Send", class: "btn btn-primary" %>&nbsp;<%= link_to 'Cancel', root_path %></div>
			</div>
		</div>
		<% end %>
	</div>
</div>
