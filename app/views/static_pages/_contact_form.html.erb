<%= form_for @contact, :url => contact_send_path do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.text_field :name, :placeholder=>"Your Name *", :id=>"name", class:"form-control"%>
        <p class="help-block text-danger"></p>
      </div>

      <div class="form-group">
        <%= f.text_field :email, :placeholder=>"Your Email *", :id=>"email", class:"form-control"%>
        <p class="help-block text-danger"></p>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.text_area :message, :placeholder=>"Your Message *", :id=>"message", :rows=>4, :class=>'form-control' %>
        <p class="help-block text-danger"></p>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-lg-12 text-center">
        <div id="success"></div>
        <%= f.submit "Send Message", class: "btn btn-xl" %>
    </div>

<% end %>
