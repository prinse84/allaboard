<% if @category.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-error">
		      The form contains <%= pluralize(@category.errors.count, "error") %>.
		</div>
  		<ul>
    		<%= @category.errors.full_messages.each do |message| %>
        		<li>* <%= message %></li>
    		<% end %>
  		</ul> 
	</div>
<% end %>