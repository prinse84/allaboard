<%= form_for @category do |f| %>
	<div class="form-group">
		<%= render 'error_messages' %>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :name, 'Category Name'%>
					<%= f.text_field :name, class:"form-control" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :forr, 'Category For' %>
					<p><%= f.select :forr, @list, :prompt => 'Select One', :class => "form-control"%></p>
				</div>
			</div>
		</div>

		<div class="clearfix"></div>

		<div class="row">
			<div class="col-md-6">
				<%= f.submit "Save", class: "btn btn-primary" %>&nbsp;<%= link_to 'Cancel', categories_path %>
			</div>
		</div>

	</div>

<% end %>
