<div class="span12">
	<div class="row">
		<div class="span2"><p>&nbsp;</p></div>
		
		<div class="span4 mycontent-left" >
			<div class="row">
				<p class="lead">Create an account to manage a board.</p>
			</div>
			
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>
				<div class="form-group">
					<div class="row">
						<div class="span6"><%= f.label :first_name, "First Name" %></div>			
					</div>
					<div class="row">
						<div class="span6"><%= f.text_field :first_name, :autofocus=> true, :placeholder=>"First Name"%></div>
					</div>	
					<div class="row">
						<div class="span6"><%= f.label :last_name, "Last Name" %></div>			
					</div>
					<div class="row">
						<div class="span6"><%= f.text_field :last_name, :autofocus=> true, :placeholder=>"Last Name"%></div>
					</div>				
										
					<div class="row">
						<div class="span6"><%= f.label :email %></div>			
					</div>
					<div class="row">
						<div class="span6"><%= f.email_field :email, :autofocus=> true, :placeholder=>"Email address"%></div>
					</div>
					<div class="row">
						<div class="span6"><%= f.label :password %></div>
					</div>
		    		<div class="row">
						<div class="span6"><%= f.password_field :password, :autocomplete=> "off", :placeholder => "Password", :class=> "form-control" %></div>
					</div>
					<div class="row">
						<div class="span6"><%= f.label :password_confirmation %></div>
					</div>
		    		<div class="row">
						<div class="span6"><%= f.password_field :password_confirmation, :autocomplete=> "off", :placeholder => "Re-enter Password", :class=> "form-control" %></div>
					</div>
					<div class="row">
						<div class="span6"><%= f.submit "Sign up", class: "btn btn-primary" %></div>
					</div>
				</div>
			<% end %>
		</div>
		
		<div class="span4">
			<p class="lead">If you have already created an account, Sign in.</p>
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="form-group">
				<div class="row">
					<div class="span6"><%= f.label :email %></div>			
				</div>
				
				<div class="row">
					<div class="span6"><%= f.email_field :email, :autofocus=> true, :placeholder=>"Email address", :class => "form-control" %></div>
				</div>

			  	<div class="row">
					<div class="span6"><%= f.label :password %></div>
				</div>
			    
				<div class="row">
					<div class="span6"><%= f.password_field :password, :autocomplete=> "off", :placeholder => "Password", :class=> "form-control" %></div>
				</div>

			  	<% if devise_mapping.rememberable? -%>
			   		<div class="row">
						<div class="span6"><%= f.check_box :remember_me %><span class="text-info">Remember me </span></div>
					</div>
			  	<% end -%>
			  	
				<div class="row">
					<div class="span6"><%= f.submit "Sign in", class: "btn btn-primary" %></div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>
