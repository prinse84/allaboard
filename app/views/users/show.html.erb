<div class="row">
	<div class="span7  mycontent-left">	
		<div class="content-header">
			<span class="lead"><strong><%= @user.get_name %></strong></span><br />
			<small class="text-info">Member since: <%= @user.created_at.strftime("%B %d, %Y")%></small>
                        <% if site_admin_logged_in? && @user != current_user %>
                          <% if @user.admin && @user != current_user %>
			    <p class="text-info"><%= link_to 'Remove user from being an administrator', user_path(user: {id: @user.id, admin: false}), method: :put %></p>
                          <% else %>
			    <p class="text-info"><%= link_to 'Make user an administrator', user_path(user: {id: @user.id, admin: true}), method: :put %></p>
                          <% end %>
			  <p class="text-info"><%= link_to 'Delete user', user_path(@user), method: :delete, data: { confirm: "Do you want to delete this user?" } %></p>
                        <% end %>
		</div>
		
		<div class="row">
			<div class="span7">
				<p class="section-title">Your Boards</p>
				<div class="row">
					<div class="span7">
						<p>The list below shows the boards that you currently manage. </p>
					</div>
					
					<div class="span7">
					<% if !@boards.blank? %>		
						<table class="table table-hover">		
							<thead>
					    		<tr>
					      			<th>Board Name</th>
					      			<th>Parent Organization</th>
					    		</tr>
						  	</thead>
							<tbody>
								<% @boards.each do |board| %>
							    <tr>
							      <td><%= link_to board.name, board_path(board) %>
								  </td>
							      <td><%= board.parent_company %></td>
								  <td>
								  	<% if board.board_admin?(@user) %>
										<%= link_to 'Unclaim board', board_unclaim_path(board) %>
								  	<% end %>
								   </td>
								</tr>
								<% end %>
							</tbody>
						</table>
					<% else %>
						<p>You have not claimed any boards. Checkout the Boards directory page to find the board that you responsible for.</p>
					<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="span4">
		<div class="row">
			<p><span class='lead'>Manage your Account</span></p>
		</div>
		<div class="row">
			<p><small><%= link_to "Update your account information", "#" %> </small><br />
				<small><%= link_to "Change your password", "#" %></small></p>
				
		</div>
	</div>
</div>
