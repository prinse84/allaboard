
<div class="row">
	<div class="col-lg-12">
		<h2 class="section-heading"><%= @event.name %></h2>
		<p><small>Organized by <%= link_to @event.board.name, board_path(@event.board.slug)%></small><br />
    <small>Tags:
      <% if !@categories.blank? %>
        <% @categories.each do |category| %>
          <%= category.name %>
          <% if category != @categories.last %>
            ,
          <% end %>
        <% end %>
      <% else %>
       None
      <% end %>
    </small><br />
    <% if current_user && @event.board.board_admin?(current_user) %>
      <span class='text-info'><small><%= link_to "Edit", edit_board_event_path(@event.board.slug, @event.slug) %> | <%= link_to 'Delete', board_event_path(@event.board.slug, @event.slug), method: :delete, data: { confirm: "Do you want to delete this event?" } %> </small>
      </span>
    <% end %>
	</div>
	<div class="row text-center">
		<div class="col-lg-12">
			<% if !@event.description.blank? %>
				<p><%= simple_format(@event.description, class:"text-muted") %></p>
			<% end %>
		</div>
	</div>
</div>
