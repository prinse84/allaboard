<%= form_for [@article, @comment], :url => article_comments_path, method: :post do |f| %>
	<div class="form-group">
		<%= render 'error_messages' %>

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<%= f.label :text, 'Comment'%>
					<%= f.text_area :text, :placeholder=>"Your comment on the post...", :rows=>5, :class=>'input-block-level form-control' %>
				</div>
			</div>
		</div>

		<div class="clearfix"></div>

		<div class="row">
			<div class="col-md-6">
				<%= f.submit "Submit", class: "btn btn-primary" %>
			</div>
		</div>
	</div>
<% end %>
