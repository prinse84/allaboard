<div class="row">
	<div class="span7 mycontent-left">	
		<%= render 'board_page_header'%>
		<div class="row">
			<div class="span7">
				<p class="section-title">Board Description</p>
				<% if !@board.description.blank? %>
					<p><%= simple_format(@board.description, class:"section-content") %></p>
				<% else %>
					<p>N/A</p>
				<% end %>
			</div>
		</div>

			<div class="row">
				<div class="span7 clear-separator">
				</div>
			</div>
		
		<div class="row">
			<div class="span7">
				<p class="section-title">Announcements (<%= @announcements.size %>)
				<% if current_user && @board.board_admin?(current_user) %>
					<span class='text-info'><small><%= link_to 'Add Announcement', new_board_announcement_path(@board.slug) %></small></span>
				<% end %>
				</p>
				<% if !@announcements.blank? %>
					<% @announcements.each do |announcement| %>
						<p><%= simple_format(announcement.text, class:"section-content") %></p>
						
						<% if current_user && @board.board_admin?(current_user) %>
							<span class='text-info'><small><%= link_to "Edit", edit_board_announcement_path(@board.slug, announcement.id) %> | <%= link_to 'Delete', board_announcement_path(@board.slug, announcement.id), method: :delete, data: { confirm: "Do you want to delete this announcement?" } %> </small>
							</span>
						<% end %>
						
						
						<% if announcement != @announcements.last %>
							<hr />
						<% end %>
					<% end %>
				<% else %>
					<p>There are no current announcements for this board.</p>
				<% end %>
			</div>
		</div>
		
		
		<div class="row">
			<div class="span7 clear-separator">
			</div>
		</div>
		
		<div class="row">
			<div class="span7">
				<p class="section-title">Upcoming Events (<%= @total_upcoming_events.size %>)
					<% if current_user && @board.board_admin?(current_user) %>
						<span class='text-info'><small><%= link_to 'Add Event', new_board_event_path(@board.slug) %></small></span>
					<% end %>
					</p>
				<% if !@events.blank? %>
					<% @events.each do |event| %>
						<div class="row">
							<div class="span1">
								<div class="date">
									<p><%= event.date.strftime("%d")%> <span><%= event.date.strftime("%^b")%></span></p>
								</div>
							</div>
							<div class="span6">
									<h5><%= link_to event.name, event_path(event.slug) %></h5>
									<p><%= event.description.truncate(200, separator:' ')%></p>
									<p><strong>Where:</strong> <%= event.location%></p>
									
									<% if current_user && @board.board_admin?(current_user) %>
										<span class='text-info'><small><%= link_to "Edit", edit_board_event_path(@board.slug, event.slug) %> | <%= link_to 'Delete', board_event_path(@board.slug, event.slug), method: :delete, data: { confirm: "Do you want to delete this event?" } %> </small>
										</span>
									<% end %>
							</div>
						</div>
						<% if event != @events.last %>
  								<hr />
  						<% end %>
					<% end %>
					<div class="row">	
						<div class="span6">
							<%= will_paginate @events %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
		
		<div class="row">
			<div class="span7 clear-separator">
			</div>
		</div>		
		
		<div class="row">
			<div class="span7">
				<p class="section-title">Public Reviews of this Board (<%= @board.reviews.size %>) <span class='text-info'><small>Got thoughts on this board? <%= link_to "Write a review", new_board_review_path(:board_slug => @board.slug, :board_id => @board.id) %>. </small></span> </p>
				<div class="row">	
					<div class="span7 section-content">
						<% if !@reviews.blank? %>
							<% @reviews.each do |review| %>
								<div class="row">
									<div class="span6">
										<blockquote>
												<p><%= review.title %></p>
                                                <% if site_admin_logged_in? %>
													<span class='text-info' style="font-size:12px"><%= link_to "Edit", edit_review_path(review) %> | <%= link_to "Delete", review_path(review), method: :delete, data: { confirm: "Do you want to delete this review?" } %></span>
												<% end %>


												<div class="star" data-score='<%= review.rating %>'></div>
												<small><%= review.reviewer_type.name%>. Submitted <%= time_ago_in_words(review.created_at) %> ago.</small>
												<h5>Pros:</h5>
												<p style="font-size:14px"><%= review.pros %></p>
												<h5>Cons:</h5>	
												<p style="font-size:14px"><%= review.cons %></p>
										</blockquote>					
									</div>
								</div>
							<% end %>
						<% end %>
					</div>
				</div>
				<div class="row">	
					<div class="span6">
						<%= will_paginate @reviews %>
					</div>
				</div>
			</div>
		</div>	
	</div>
	<div class="span4">
		<div class="row">
			<p><span class='lead'>Quick Board Details</span><br />
			<% if !@board.board_claimed? %>
				<span class="text-info">
			  	<small>Are you a point of contact for this board? <br /><%= link_to 'Claim this board', board_claim_path(@board.slug) %>.</small>
				</span>
			<% else %>
				<span class="text-info">
		  		<small>This board profile is managed by <%= @board.user.get_name.titleize %></small>
				</span>
			<% end %>
			</p>
			
			<span><strong>Primary Contact:</strong></span>
			<% if @board.board_claimed? %>
				<p><small><%= @board.user.get_name.titleize %> (<%= mail_to @board.user.email, "Send email", encode: "hex" %>)</small></p>
			<% else %>
				<p><small>N/A</small></p>
			<% end %>
		</div>
		<div class="row">
			<span><strong>Parent Organization:</strong></span>
			<% if !@board.parent_company.blank? %>
				<p><small><%= @board.parent_company %></small></p>
			<% else %>
				<p><small>N/A</small></p>
			<% end %>
		</div>
		
		<div class="row">
			<span><strong>Website URL:</strong></span>
			<% if !@board.url.blank? %>
				<p><small><%= link_to @board.url, @board.url, :target => "_blank"  %></small></p>
			<% else %>
				<p><small>N/A</small></p>
			<% end %>
		</div>
		
		<div class="row">
			<h5>Vendors used by this Board:</h5>			
			<% if !@vendors.blank? %>
				<% @vendors.each do |vendor| %>
					<div class="row">
						<div class="span4 section-content">
							<p><%= link_to vendor.name, vendor_path(vendor) %>
							<% if current_user && @board.board_admin?(current_user) %>
								<span class='text-info'><small>(<%= link_to "Edit Details", edit_vendor_path(vendor) %>)</small></span>
							<% end %>
							</p>					
						</div>
					</div>
				<% end %>
			<% else %>
				<p>This board has not submitted any vendors.</p>
			<% end %>
			<% if current_user && @board.board_admin?(current_user) %>
				<%= button_to 'Add Vendor', new_vendor_path, class: "btn btn-primary", method: 'get' %> 
			<% end %>
		</div>
	</div>
</div>
