<div class="content-header">
	<span class="lead"><strong><%= @board.name %></strong></span>
	<div class="star" data-score='<%= @board.get_average_rating %>'></div>	
	<% if current_user && @board.board_admin?(current_user) %>
		<p><%= link_to 'Edit board details', edit_board_path(@board.slug) %></p>
		<p><%= link_to 'Delete this board', board_path(@board.slug), method: :delete, data: { confirm: "Do you want to delete this board and all information that belongs to it (vendors, events, reviews)?" } %></p>
	<% end %>

</div>
