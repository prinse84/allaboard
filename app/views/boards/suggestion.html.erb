<% provide(:title, "Suggest a board:") %>
<%= render 'shared/header' %>

<section>
	<div class="container">
    <div class="row text-center">
      <div class="col-lg-12">
        <h2 class="section-heading">Suggest a Board to add to our directory</h2>
      </div>
    </div>

		<div class="row text-center">
			<div class="col-lg-12">
				<p>Thank you for helping us grow the list of boards in our directory. Please submit the form below and you will be notified via email when this board has been validated and added.</p>
			</div>
		</div>

		<div class="row">
			<div class="span8">
				<%= form_for @suggestion, :url => boards_suggestion_create_path do |f| %>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<%= f.label :suggested_board_name, 'Board Name'%>
								<%= f.text_field :suggested_board_name, :placeholder=>"Board Name", class:"form-control" %>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<%= f.label :suggester_email, 'Your email address'%>
								<%= f.text_field :suggester_email, :placeholder=>"you@example.com", class:"form-control" %>
								<%= recaptcha_tags %>
							</div>
						</div>
					</div>



    			<div class="clearfix"></div>
					<div class="row">
						<div class="col-md-6">
							<%= f.submit "Submit Board", class: "btn btn-primary" %> &nbsp; <%= link_to 'Cancel', boards_path %>
						</div>
					</div>
				<% end %>
		</div>
	</div>
</section>
